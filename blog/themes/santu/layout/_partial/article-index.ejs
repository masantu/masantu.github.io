<%
    var subtitle = '';
    if (item.subtitle && item.subtitle.length){
        subtitle = item.subtitle;
    }else if(item.excerpt && item.excerpt.length){
        subtitle = item.excerpt;
    }
%>

<div class="post-preview">
    <a href="<%- config.root %><%- item.path %>">
        <h2 class="post-title">
            <%- item.title || theme.default_post_title || "Untitled" %>
        </h2>
        <% if (subtitle) { %>
            <h3 class="post-subtitle">
                <%- subtitle %>
            </h3>
        <% } %>
    </a>
    <p class="post-meta">
        <% if(item.top) { %>
            <i class="fa fa-thumb-tack slogan"></i>
            <span class="badge color-span"><%- __('pin')%></span>
            <span class="post-meta-divider"> | </span>
        <% } %>
        <!-- Date and Author -->
        <% if(item.author) { %>
            Posted by <%- item.author %> on
        <% } %>
        <%= item.date.format(config.date_format) %>
    </p>
</div>
<hr>